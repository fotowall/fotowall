{
  "name": "mc-rtc-superbuild-jammy",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "../.."
  },

  "runArgs": ["--network=host"],

  "containerEnv": {
    "UBUNTU_VERSION": "jammy"
  },

  "features":
  {
    // "ghcr.io/devcontainers-extra/features/cmake:1": {},
    // "ghcr.io/duduribeiro/devcontainer-features/neovim:1": { "version": "nightly" }
  },

  "remoteUser": "vscode",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/workspace/fotowall,type=bind",
  "workspaceFolder": "/home/vscode/workspace/fotowall"
  // "postAttachCommand": "sudo chown -R vscode:vscode /home/vscode/workspace"
}
